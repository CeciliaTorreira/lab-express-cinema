<div>
  <div>
    <img src="{{singleMovie.image}}" alt="Movie poster" />
  </div>
  <div>
    <h3>{{singleMovie.title}}</h3>

    <h5>Director: {{singleMovie.director}}</h5>

    <h5>Stars: </h5>
    <ul>
      {{#each singleMovie.stars}}
        <li>{{this}}</li>
      {{/each}}
    </ul>

    <p>{{singleMovie.description}}</p>

    <h2>Showtimes: </h2>
    <p>{{#each singleMovie.showtimes}}
        <span>{{this}} |</span>
      {{/each}}
    </p>
  </div>
</div>

